{
	"name": "pastebin",
	"module": "./src/app.ts",
	"type": "module",
	"scripts": {
		"start:dev": "bun run --hot ./src/app.ts",
		"start:prod": "node ./dist/app.js",
		"start:migration:prod": "bunx prisma migrate deploy && bun run start:prod",
		"build": "bun build ./src/app.ts --outdir ./dist --minify --target node",
		"test": "NODE_ENV=test jest --forceExit --detectOpenHandles --watchAll"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/nodemailer": "^6.4.15",
		"@types/supertest": "^6.0.2",
		"@types/uuid": "^10.0.0",
		"jest": "^29.7.0",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.629.0",
		"@prisma/client": "5.17.0",
		"bcryptjs": "^2.4.3",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-validator": "^7.2.0",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.9.14",
		"prisma": "^5.18.0",
		"uuid": "^10.0.0"
	}
}
