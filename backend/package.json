{
	"name": "pastebin",
	"module": "./src/app.ts",
	"type": "module",
	"scripts": {
		"start:dev": "bun run --watch ./src/index.ts",
		"start:prod": "bun ./dist/bundle.js",
		"start:migration:prod": "bunx prisma migrate deploy && bun run start:prod",
		"build:dev": "bun build ./src/index.ts --outfile ./dist/bundle.js --minify --sourcemap=inline --target bun",
		"build:prod": "bun build ./src/index.ts --outfile ./dist/bundle.js --minify --target bun"
	},
	"devDependencies": {
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/ioredis": "^5.0.0",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/node-cron": "^3.0.11",
		"@types/bun": "^1.1.14",
		"prisma": "^6.0.1",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"@prisma/client": "^6.0.1",
		"@aws-sdk/client-s3": "^3.709.0",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"express": "^4.21.2",
		"express-validator": "^7.2.0",
		"ioredis": "^5.4.1",
		"jsonwebtoken": "^9.0.2",
		"node-cron": "^3.0.3"
	}
}
